{
  "editor.lineHeight": 1.2,
  "editor.wordBasedSuggestionsMode": "currentDocument",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.formatOnSave": true,
  //"editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // add this code
  // "[php]": {
  //   "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  // },
  "prettier.singleQuote": true,
  "window.zoomLevel": -2,
  "files.exclude": {
    "**/.DS_Store": false
  },
  "editor.rulers": [
    {
      "column": 0,
      "color": "#e1ff0000"
    },
    {
      "column": 4,
      "color": "#59ff0000"
    },
    {
      "column": 8,
      "color": "#ff00ff00"
    }
  ],

  "breadcrumbs.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#7777777e",
          "fontStyle": "italic bold"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "editor.matchBrackets": false,
    "editor.lineHighlightBackground": "#e6e6e600",
    "editor.lineHighlightBorder": "#ff000000",
    "editor.selectionHighlightBorder": "#000000",
    "list.inactiveFocusOutline": "#df0a0a00",
    "activityBar.background": "#2c005227",
    "window.activeBorder": "#00f7ff00",
    "sideBar.background": "#1d1d1d",
    "editor.selectionBackground": "#9c4600c4",
    "editor.hoverHighlightBackground": "#00ddfff4",
    "tab.activeBackground": "#6352ff47",
    "editorBracketMatch.background": "#ff00e696",
    "editor.selectionHighlightBackground": "#6452ff",
    "editor.findMatchBackground": "#6452ff",
    "editor.findMatchHighlightBackground": "#1900ff",
    "editor.background": "#171717",
    "sideBarSectionHeader.background": "#7272721d",
    "scrollbarSlider.background": "#6452ff"
  },

  /*
      "list.inactiveFocusOutline": "#ffffff00",
      "activityBar.background": "#111111",
      "window.activeBorder": "#00000000",
      "sideBar.background": "#111111",
      "editor.selectionBackground": "#ffae0057",
      "editor.selectionHighlightBackground": "#ffae0057",
      "editor.background": "#1a1a1a"
    */
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fit",
  "editor.minimap.renderCharacters": false,
  "window.titleSeparator": "",
  "window.title": "${activeEditorMedium}${separator}",
  "window.restoreWindows": "none",
  "explorer.openEditors.visible": 3,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.fontWeight": "normal",
  "editor.accessibilitySupport": "off",
  "scm.diffDecorations": "none",
  "editor.hover.delay": 1000,
  "editor.hover.above": false,
  "editor.scrollBeyondLastLine": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "hidden",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": true
  },
  "python.analysis.autoImportCompletions": false,
  "python.linting.pylintArgs": ["--disable=C0111"],
  "workbench.editor.tabSizing": "shrink",
  "python.formatting.provider": "black",
  "javascript.suggest.autoImports": false,
  "editor.fontSize": 22,
  "git.enabled": false,
  "editor.cursorStyle": "line",
  "explorer.compactFolders": false,
  "explorer.openEditors.sortOrder": "fullPath",
  "explorer.sortOrder": "filesFirst",
  "workbench.iconTheme": null,
  "explorer.openEditors.minVisible": 10,
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "editor.minimap.enabled": false
}
